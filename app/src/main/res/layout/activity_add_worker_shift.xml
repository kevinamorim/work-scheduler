<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kevin.amorim.com.workscheduler.main.AddWorkerShiftActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mon - 14:30 - 18:00"
        android:id="@+id/tvShiftTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnAddWorkerToShift"
        android:layout_below="@+id/tvShiftTitle"
        android:layout_alignRight="@+id/tvShiftTitle"
        android:layout_alignEnd="@+id/tvShiftTitle"
        android:onClick="addWorkerToShift" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spWorkers"
        android:layout_alignBottom="@+id/btnAddWorkerToShift"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvShiftTitle"
        android:layout_toLeftOf="@+id/btnAddWorkerToShift"
        android:layout_toStartOf="@+id/btnAddWorkerToShift" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvShiftWorkers"
        android:layout_below="@+id/spWorkers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
